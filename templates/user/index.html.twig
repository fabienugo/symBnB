{% extends 'base.html.twig' %}

{% block title %}Profile de {{user.fullName}}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center mb-3">
            <div class="col-md-3 text-center">
                <img class="avatar mb-3" src="{{user.picture}}" alt="Avatar de  {{user.fullName}}"></img>
                <br>
                <span class="badge badge-primary">{{user.ads | length}} annonces</span>
            </div>
            <div class="col-md-9">
                <h1>{{user.fullName}}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                        <a href="{{path('account_password')}}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                    </div>
                    
                {% endif %}
            </div>
        </div>
        <hr>
        {{user.description | raw }}
        <hr>
        <h2>Les annonces de {{user.fullName}}</h2>

         {% if user.ads | length > 0 %}
        <div class="row">
            {% for ad in user.ads %}
                {% include 'ad/_ad.html.twig' %}
            {% endfor %}
        </div>
        {% else %}
        <div class="alert alert-warning">
            <p><strong>Cet utilisateur n'a pas encore d'annonce !</strong></p>
        </div>
            
        {% endif %}
    </div>
{% endblock %}
